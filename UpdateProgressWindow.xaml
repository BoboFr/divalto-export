<Window x:Class="Divalto.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mise à jour en cours"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#F0F0F0"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
            <TextBlock Text="Téléchargement de la mise à jour" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Foreground="#333333" />

            <ProgressBar Height="20" Value="0" Maximum="100" Name="DownloadProgress" Margin="0,0,0,10" />

            <TextBlock Name="ProgressText" Text="Veuillez patienter..." FontSize="12" Foreground="#666666" TextAlignment="Center" />

            <TextBlock Name="StatusText" Text="" FontSize="11" Foreground="#999999" TextAlignment="Center" Margin="0,8,0,0" />
        </StackPanel>
    </Border>
</Window>
