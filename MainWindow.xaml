<Window x:Class="Divalto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Divalto"
        xmlns:converters="clr-namespace:Divalto.Converters"
        mc:Ignorable="d"
        Title="Exports DIVALTO"
        Height="700"
        Width="1200"
        Background="#ffffff"
        Loaded="MainWindow_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-t√™te -->
        <Border Grid.Row="0"
                Background="#ffffff"
                BorderBrush="#e2e8f0"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center">
                <TextBlock Text="Divalto"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#0f172a"/>
                <TextBlock Text="Gestionnaire de Donn√©es"
                        FontSize="14"
                        Foreground="#64748b"
                        Margin="20,6,0,0"/>
                <TextBlock Text="{Binding StatusMessage}"
                        FontSize="12"
                        Foreground="#64748b"
                        Margin="20,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu Principal -->
        <Grid Grid.Row="1"
                Background="#f8fafc">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- GAUCHE : Liste des tables -->
            <Border Grid.Column="0"
                    Background="#ffffff"
                    BorderBrush="#e2e8f0"
                    BorderThickness="0,0,1,0"
                    Padding="20">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Tables"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#0f172a"
                            Margin="0,0,0,16"/>
                    <ListBox x:Name="TablesListBox"
                             ItemsSource="{Binding AvailableTables}"
                             SelectedItem="{Binding SelectedTable, UpdateSourceTrigger=PropertyChanged}"
                             Background="transparent"
                             BorderThickness="0"
                             Padding="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="12,8"
                                                    Margin="0,4">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected"
                                                        Value="True">
                                                    <Setter Property="Background"
                                                            Value="#e0e7ff"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver"
                                                        Value="True">
                                                    <Setter Property="Background"
                                                            Value="#f1f5f9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,2">
                                    <TextBlock Text="{Binding Label}"
                                            Foreground="#0f172a"
                                            FontSize="13"
                                            FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding TableName}"
                                            Foreground="#64748b"
                                            FontSize="11"
                                            Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- MILIEU : Donn√©es -->
            <Border Grid.Column="1"
                    Background="#ffffff"
                    BorderBrush="#e2e8f0"
                    BorderThickness="0,0,1,0"
                    Padding="24">
                <Grid>
                    <!-- Message de s√©lection -->
                    <TextBlock VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                               FontSize="16"
                            Foreground="#64748b"
                            TextAlignment="Center"
                               Visibility="{Binding HasSelectedTable, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        Pour commencer, s√©lectionn√© une table<LineBreak/>dans le menu de gauche
                    </TextBlock>

                    <!-- Contenu normal -->
                    <Grid Visibility="{Binding IsLoadingVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- En-t√™te -->
                        <StackPanel Grid.Row="0"
                                Orientation="Vertical"
                                Margin="0,0,0,16">
                            <TextBlock FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="#0f172a">
                                <Run Text="{Binding SelectedTable.TableName}"/>
                                <Run Text=" ‚Ä¢ Filtre: DOS = 200"
                                        Foreground="#64748b"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding TableDataView}"
                                  AutoGenerateColumns="True"
                                  Background="transparent"
                                  BorderBrush="#e2e8f0"
                                  BorderThickness="1"
                                  CanUserResizeColumns="True"
                                  CanUserResizeRows="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#e2e8f0"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

                        <!-- Statut -->
                        <TextBlock Grid.Row="2"
                                Text="{Binding DataGridStatusMessage}"
                                   FontSize="12"
                                Foreground="#64748b"
                                Margin="0,12,0,0"/>

                        <!-- Aper√ßu Export -->
                        <Border Grid.Row="3"
                                Background="#f8fafc"
                                BorderBrush="#e2e8f0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16"
                                Margin="0,20,0,0"
                                Visibility="{Binding HasExportPreview, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <!-- En-t√™te de l'aper√ßu -->
                                <TextBlock Text="üìã Aper√ßu de l'export"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#0f172a"
                                        Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding ExportPreviewMessage}"
                                        FontSize="11"
                                        Foreground="#64748b"
                                        Margin="0,0,0,12"/>

                                <!-- DataGrid d'aper√ßu -->
                                <DataGrid ItemsSource="{Binding ExportPreviewDataView}"
                                          AutoGenerateColumns="True"
                                          Background="transparent"
                                          BorderBrush="#cbd5e1"
                                          BorderThickness="1"
                                          CanUserResizeColumns="True"
                                          CanUserResizeRows="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="#e2e8f0"
                                          MaxHeight="150"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                          FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Message d'information -->
                        <TextBlock Grid.Row="4"
                                Text="üí° Les colonnes affich√©es ci-dessus seront export√©es dans le fichier Excel"
                                FontSize="11"
                                Foreground="#64748b"
                                FontStyle="Italic"
                                Margin="0,8,0,0"
                                Visibility="{Binding HasExportPreview, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <!-- √âcran de chargement -->
                    <Border Background="#ffffff"
                            Opacity="0.95"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                            <TextBlock Text="‚è≥ Chargement des donn√©es..."
                                    FontSize="16"
                                    FontWeight="Bold"
                                       Foreground="#0f172a"
                                    TextAlignment="Center"
                                    Margin="0,0,0,20"/>
                            <ProgressBar Width="300"
                                    Height="8"
                                    IsIndeterminate="True"
                                         Background="#e2e8f0"
                                    Foreground="#3b82f6"
                                    Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding LoadingStatusMessage}"
                                    FontSize="12"
                                       Foreground="#64748b"
                                    TextAlignment="Center"/>
                            <Button x:Name="CancelLoadingButton"
                                    Content="Annuler"
                                    Click="OnCancelLoadingClick"
                                    Background="#ef4444"
                                    Foreground="White"
                                    Padding="12,8"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,20,0,0"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- DROITE : Export -->
            <Border Grid.Column="2"
                    Background="#ffffff"
                    BorderBrush="#e2e8f0"
                    BorderThickness="0,0,0,0"
                    Padding="20">
                <Grid>
                    <!-- Contenu normal -->
                    <StackPanel x:Name="ExportPanel"
                            Orientation="Vertical"
                            IsEnabled="{Binding HasSelectedTable}"
                                Visibility="{Binding IsExporting, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Exporter"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#0f172a"
                                Margin="0,0,0,16"/>

                        <!-- S√©lection des colonnes -->
                        <TextBlock Text="Colonnes"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#0f172a"
                                Margin="0,0,0,8"/>

                        <!-- Champ de recherche -->
                        <Grid Margin="0,0,0,8">
                            <TextBox x:Name="ColumnSearchTextBox"
                                     Text="{Binding ColumnSearchFilter, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8,8,32,8"
                                     FontSize="12"
                                     Background="#ffffff"
                                     BorderBrush="#cbd5e1"
                                     BorderThickness="1"/>
                            <TextBlock Text="üîç Rechercher une colonne..."
                                       Foreground="#94a3b8"
                                       FontSize="12"
                                       Margin="8,0,0,0"
                                       Padding="0,8"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text, ElementName=ColumnSearchTextBox, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                            <Button x:Name="ClearFilterButton"
                                    Content="√ó"
                                    Click="OnClearColumnFilterClick"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,4,0"
                                    Padding="8,0"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#64748b"
                                    Cursor="Hand"
                                    Visibility="{Binding Text, ElementName=ColumnSearchTextBox, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#f1f5f9"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Statut du filtre -->
                        <TextBlock Text="{Binding ColumnFilterStatus}"
                                FontSize="11"
                                Foreground="#64748b"
                                Margin="0,0,0,8"/>

                        <ListBox x:Name="ColumnsListBox"
                                 ItemsSource="{Binding FilteredColumns}"
                                 Background="transparent"
                                 BorderBrush="#e2e8f0"
                                 BorderThickness="1"
                                 Padding="0"
                                 Height="200"
                                 Margin="0,0,0,16"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 ScrollViewer.CanContentScroll="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding ColumnName}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="12,8"
                                              VerticalAlignment="Center"
                                              VerticalContentAlignment="Center"
                                            Foreground="#0f172a"
                                            FontSize="12"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Boutons -->
                        <Button x:Name="SelectAllButton"
                                Content="S√©lectionner tout"
                                Click="OnSelectAllColumnsClick"
                                Background="#3b82f6"
                                Foreground="White"
                                Padding="12,10"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,8"
                                FontSize="12"/>

                        <Button x:Name="DeselectAllButton"
                                Content="D√©s√©lectionner tout"
                                Click="OnDeselectAllColumnsClick"
                                Background="#e2e8f0"
                                Foreground="#0f172a"
                                Padding="12,10"
                                FontWeight="SemiBold"
                                BorderThickness="1"
                                BorderBrush="#cbd5e1"
                                Cursor="Hand"
                                Margin="0,0,0,16"
                                FontSize="12"/>

                        <!-- Bouton export -->
                        <Button x:Name="ExportButton"
                                Content="üì• Exporter Excel"
                                Command="{Binding ExportCommand}"
                                Background="#10b981"
                                Foreground="White"
                                Padding="12,12"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="12"/>

                        <!-- Statut export -->
                        <TextBlock Text="{Binding ExportStatusMessage}"
                                FontSize="11"
                                Foreground="#64748b"
                                   Margin="0,12,0,0"
                                TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Progression export -->
                    <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                                Visibility="{Binding IsExporting, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="16">
                        <TextBlock Text="üìä Export en cours..."
                                FontSize="14"
                                FontWeight="Bold"
                                   Foreground="#0f172a"
                                TextAlignment="Center"
                                Margin="0,0,0,16"/>

                        <ProgressBar Width="220"
                                Height="6"
                                IsIndeterminate="False"
                                     Background="#e2e8f0"
                                Foreground="#10b981"
                                     Value="{Binding ExportProgressPercentage}"
                                     Margin="0,0,0,12"/>

                        <TextBlock TextAlignment="Center"
                                Margin="0,0,0,12"
                                FontSize="12"
                                Foreground="#0f172a">
                            <Run FontWeight="Bold"
                                    Text="{Binding ExportProgressPercentage, StringFormat='F0'}"/><Run Text="%"/>
                        </TextBlock>

                        <TextBlock Text="{Binding ExportProgressMessage}"
                                FontSize="11"
                                   Foreground="#64748b"
                                TextAlignment="Center"
                                Margin="0,0,0,12"
                                TextWrapping="Wrap"/>

                        <TextBlock FontSize="10"
                                Foreground="#94a3b8"
                                TextAlignment="Center"
                                Margin="0,0,0,16">
                            <Run Text="Lignes: "/><Run Text="{Binding ExportCurrentRow}"/><Run Text=" / "/><Run Text="{Binding ExportTotalRows}"/>
                        </TextBlock>

                        <Button x:Name="CancelExportButton"
                                Content="Annuler"
                                Click="OnCancelExportClick"
                                Background="#ef4444"
                                Foreground="White"
                                Padding="12,8"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Width="100"
                                HorizontalAlignment="Center"
                                FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
